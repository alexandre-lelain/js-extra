{
  "name": "js-extra",
  "version": "1.0.1",
  "description": "Does what native Javascript doesn't.",
  "homepage": "https://alexandre-lelain.github.io/js-extra/",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:alexandre-lelain/js-extra.git",
  "author": "Alexandre Le Lain <lelain.alexandre@gmail.com>",
  "license": "MIT",
  "keywords": [
    "Javascript",
    "functions",
    "helpers"
  ],
  "scripts": {
    "build": "tsc",
    "doc": "yarn typedoc --out docs src/ --exclude **/tests/* --module commonjs --target ES6 --tsconfig ./tsconfig.json --ignoreCompilerErrors",
    "deploy": "yarn doc && gh-pages -d docs -t -a",
    "lint": "tslint -p tsconfig.json",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "version": "yarn prettier && git add -vA src"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  }
}
