{
  "name": "js-extra",
  "version": "1.0.2",
  "description": "Does what native Javascript doesn't.",
  "homepage": "https://js-extra.netlify.com/",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandre-lelain/js-extra"
  },
  "author": "Alexandre Le Lain <lelain.alexandre@gmail.com>",
  "license": "MIT",
  "keywords": [
    "Javascript",
    "functions",
    "helpers"
  ],
  "scripts": {
    "build": "tsc",
    "doc": "yarn docsify serve docs",
    "deploy": "gh-pages -d docs -t -a",
    "lint": "tslint -p tsconfig.json",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "validate": "yarn lint && yarn prettier",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "version": "yarn prettier && git add -vA src"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "docsify-cli": "^4.3.0",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "marked": "^0.6.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  }
}
